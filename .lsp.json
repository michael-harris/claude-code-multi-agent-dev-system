{
  "lspServers": {
    "typescript": {
      "command": "mcp-language-server",
      "args": ["--workspace", "${PROJECT_ROOT}"],
      "env": {
        "LSP_SERVER": "typescript-language-server",
        "LSP_SERVER_ARGS": "--stdio"
      },
      "detect": ["package.json", "tsconfig.json", "*.ts", "*.tsx"]
    },
    "python": {
      "command": "mcp-language-server",
      "args": ["--workspace", "${PROJECT_ROOT}"],
      "env": {
        "LSP_SERVER": "pyright",
        "LSP_SERVER_ARGS": ""
      },
      "detect": ["pyproject.toml", "requirements.txt", "setup.py", "*.py"]
    },
    "go": {
      "command": "mcp-language-server",
      "args": ["--workspace", "${PROJECT_ROOT}"],
      "env": {
        "LSP_SERVER": "gopls",
        "LSP_SERVER_ARGS": ""
      },
      "detect": ["go.mod", "go.sum", "*.go"]
    },
    "rust": {
      "command": "mcp-language-server",
      "args": ["--workspace", "${PROJECT_ROOT}"],
      "env": {
        "LSP_SERVER": "rust-analyzer",
        "LSP_SERVER_ARGS": ""
      },
      "detect": ["Cargo.toml", "Cargo.lock", "*.rs"]
    },
    "java": {
      "command": "mcp-language-server",
      "args": ["--workspace", "${PROJECT_ROOT}"],
      "env": {
        "LSP_SERVER": "jdtls",
        "LSP_SERVER_ARGS": ""
      },
      "detect": ["pom.xml", "build.gradle", "*.java"]
    },
    "csharp": {
      "command": "mcp-language-server",
      "args": ["--workspace", "${PROJECT_ROOT}"],
      "env": {
        "LSP_SERVER": "omnisharp",
        "LSP_SERVER_ARGS": ""
      },
      "detect": ["*.csproj", "*.sln", "*.cs"]
    },
    "ruby": {
      "command": "mcp-language-server",
      "args": ["--workspace", "${PROJECT_ROOT}"],
      "env": {
        "LSP_SERVER": "ruby-lsp",
        "LSP_SERVER_ARGS": ""
      },
      "detect": ["Gemfile", "*.rb", "Rakefile"]
    },
    "php": {
      "command": "mcp-language-server",
      "args": ["--workspace", "${PROJECT_ROOT}"],
      "env": {
        "LSP_SERVER": "phpactor",
        "LSP_SERVER_ARGS": "language-server"
      },
      "detect": ["composer.json", "*.php"]
    }
  }
}
